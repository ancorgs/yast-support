@commands = ("/sbin/lilo -t -v3",
	"/sbin/fdisk -l",
	"/usr/sbin/hwinfo --disk",
	"/usr/sbin/hwinfo --storage_ctrl",
	"/bin/mount",
	"/bin/grep INITRD /etc/rc.config",
	"/bin/ls -la /boot",
	"/usr/bin/sed '/^ *password/s/=.*/ is set but hidden away/i' /etc/lilo.conf"
	);

@files = ("/etc/fstab",
	"/var/log/boot.msg"
	);
